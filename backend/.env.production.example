# Production Environment Configuration
APP_NAME="VidaduAcademy"
APP_ENV=production
APP_KEY=base64:your-production-app-key-here
APP_DEBUG=false
APP_URL=https://api.vidaduacademy.sk
APP_PORT=80

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Production Database
DB_CONNECTION=mysql
DB_HOST=your-db-host
DB_PORT=3306
DB_DATABASE=vidadu_academy_prod
DB_USERNAME=your-db-username
DB_PASSWORD=your-secure-db-password

BROADCAST_DRIVER=redis
CACHE_DRIVER=redis
FILESYSTEM_DISK=s3
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Redis Configuration
REDIS_HOST=your-redis-host
REDIS_PASSWORD=your-redis-password
REDIS_PORT=6379

# Production Mail Settings
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=your-mailgun-username
MAIL_PASSWORD=your-mailgun-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@vidaduacademy.sk"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 for File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=eu-central-1
AWS_BUCKET=vidaduacademy-files
AWS_USE_PATH_STYLE_ENDPOINT=false

# Production Stripe Keys
STRIPE_SECRET_KEY=sk_live_your-live-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-live-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-live-webhook-secret
STRIPE_CURRENCY=EUR

# Laravel Sanctum - Production Domains
SANCTUM_STATEFUL_DOMAINS=vidaduacademy.sk,www.vidaduacademy.sk,app.vidaduacademy.sk

# Frontend URL
FRONTEND_URL=https://app.vidaduacademy.sk
