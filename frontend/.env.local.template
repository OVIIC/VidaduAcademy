# Frontend Environment Variables (.env.local template)
# Copy this for local development

# ===== CORE APPLICATION =====
VITE_APP_NAME=VidaduAcademy
VITE_APP_ENV=local

# ===== API CONFIGURATION =====
VITE_API_BASE_URL=http://localhost:8000
VITE_API_TIMEOUT=10000

# ===== AUTHENTICATION =====
VITE_AUTH_GUARD=web
VITE_SESSION_DOMAIN=localhost

# ===== STRIPE (Test keys) =====
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_TEST_PUBLISHABLE_KEY

# ===== FEATURE FLAGS =====
VITE_ENABLE_REGISTRATION=true
VITE_ENABLE_SOCIAL_LOGIN=false
VITE_ENABLE_NOTIFICATIONS=true

# ===== DEVELOPMENT/DEBUG =====
VITE_DEBUG=true
VITE_SHOW_DEVTOOLS=true
VITE_HOT_RELOAD=true

# ===== LOCAL TESTING =====
VITE_MOCK_API=false
VITE_BYPASS_AUTH=false
