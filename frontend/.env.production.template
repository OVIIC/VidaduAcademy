# Frontend Environment Variables (.env.production template)
# Copy this for production frontend

# ===== CORE APPLICATION =====
VITE_APP_NAME=VidaduAcademy
VITE_APP_ENV=production

# ===== API CONFIGURATION =====
VITE_API_BASE_URL=https://vidaduacademy.onrender.com
VITE_API_TIMEOUT=30000

# ===== AUTHENTICATION =====
VITE_AUTH_GUARD=web
VITE_SESSION_DOMAIN=.onrender.com

# ===== STRIPE (Live keys) =====
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_LIVE_PUBLISHABLE_KEY

# ===== FEATURE FLAGS =====
VITE_ENABLE_REGISTRATION=true
VITE_ENABLE_SOCIAL_LOGIN=false
VITE_ENABLE_NOTIFICATIONS=true

# ===== ANALYTICS =====
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_HOTJAR_ID=XXXXXXX

# ===== EXTERNAL SERVICES =====
VITE_YOUTUBE_API_KEY=your-youtube-api-key
VITE_VIMEO_API_KEY=your-vimeo-api-key

# ===== DEVELOPMENT/DEBUG =====
VITE_DEBUG=false
VITE_SHOW_DEVTOOLS=false
